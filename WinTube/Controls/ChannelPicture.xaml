<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WinTube.Controls.ChannelPicture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:WinTube.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinTube.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Height="64"
    d:Width="64"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:HalfValueConverter x:Key="HalfValueConverter" />
    </UserControl.Resources>

    <Grid>
        <Border CornerRadius="{x:Bind Size, Mode=OneWay, Converter={StaticResource HalfValueConverter}}">
            <local:Shimmer Width="{x:Bind Size, Mode=OneWay}" Height="{x:Bind Size, Mode=OneWay}" />
        </Border>
        <Ellipse
            Width="{x:Bind Size, Mode=OneWay}"
            Height="{x:Bind Size, Mode=OneWay}"
            Canvas.ZIndex="1">
            <Ellipse.Fill>
                <ImageBrush d:ImageSource="/Assets/Template/temp-channel.png" ImageSource="{x:Bind ImageSource, Mode=OneWay}" />
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>