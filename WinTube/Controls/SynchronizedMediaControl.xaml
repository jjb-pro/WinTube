<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WinTube.Controls.SynchronizedMediaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinTube.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <MediaElement x:Name="audioPlayerElement" />
        <MediaElement
            x:Name="videoPlayerElement"
            Grid.Row="1"
            AreTransportControlsEnabled="True"
            DoubleTapped="MediaPlayerDoubleTapped">
            <MediaElement.TransportControls>
                <local:CustomMediaTransportControls
                    x:Name="mediaTransportControls"
                    PlayPauseButtonClicked="PlayPauseButtonClicked"
                    ProgressSliderValueChanged="ProgressSliderValueChanged" />
            </MediaElement.TransportControls>
        </MediaElement>
    </Grid>
</UserControl>