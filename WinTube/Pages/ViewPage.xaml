<Page
    x:Class="WinTube.Pages.ViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WinTube.Controls"
    xmlns:converters="using:WinTube.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinTube.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:observableModel="using:WinTube.Model.Observable"
    xmlns:viewmodels="using:WinTube.ViewModels"
    Background="{StaticResource AppBackgroundBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:ShortDateOffsetConverter x:Key="ShortDateOffsetConverter" />
        <converters:NumberToAbbreviatedStringConverter x:Key="NumberToAbbreviatedStringConverter" />
        <converters:UriToBitmapConverter x:Key="UriToBitmapConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid
            Margin="0,100,0,0"
            d:Visibility="Collapsed"
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Center" Text="Please wait ..." />
            <ProgressBar
                Grid.Row="1"
                Margin="0,10,0,0"
                IsIndeterminate="True" />
        </Grid>

        <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=true}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <controls:SyncAudioVideoControl
                AudioStreams="{x:Bind ViewModel.AudioStreams, Mode=OneWay}"
                VideoStreams="{x:Bind ViewModel.VideoStreams, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLive, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=true}" />

            <!--
                CaptionSources="{x:Bind ViewModel.CaptionSources, Mode=OneWay}"
                PosterSource="{x:Bind ViewModel.PosterSource, Mode=OneWay, TargetNullValue=/Assets/Template/Thumb_Default.png}"
            -->

            <controls:BindableMediaPlayerElement
                AreTransportControlsEnabled="True"
                AutoPlay="True"
                PosterSource="{x:Bind ViewModel.PosterSource, Mode=OneWay, TargetNullValue=/Assets/Template/Thumb_Default.png}"
                StreamSource="{x:Bind ViewModel.LivestreamSource, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsLive, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <Grid Grid.Row="1" Padding="16,0,16,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Margin="0,24,0,0"
                    HorizontalAlignment="Left"
                    CornerRadius="4">
                    <controls:Shimmer
                        Width="250"
                        Height="20"
                        d:Visibility="Collapsed"
                        Visibility="{x:Bind ViewModel.Title, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                </Border>
                <TextBlock
                    Margin="0,16,0,0"
                    d:Text="Short video title | Test"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                    TextWrapping="WrapWholeWords" />

                <Button
                    Grid.Column="1"
                    Margin="16,16,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource TransparentPathIconButtonStyle}">
                    <controls:FontIcon Glyph="&#xE70D;" />
                </Button>

                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        CornerRadius="4">
                        <controls:Shimmer
                            Width="50"
                            Height="17"
                            d:Visibility="Collapsed"
                            Visibility="{x:Bind ViewModel.ViewCount, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                    </Border>

                    <controls:FontIcon
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                        Glyph="&#xE890;"
                        Size="12" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        d:Text="1.2M"
                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind ViewModel.ViewCount, Mode=OneWay, Converter={StaticResource NumberToAbbreviatedStringConverter}}" />
                </Grid>

                <Grid
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <controls:ReactionButton
                        Grid.Column="0"
                        Description="{x:Bind ViewModel.LikeCount, Mode=OneWay, Converter={StaticResource NumberToAbbreviatedStringConverter}}"
                        IconGlyph="&#xE8E1;" />

                    <controls:ReactionButton
                        Grid.Column="1"
                        Description="Dislike"
                        IconGlyph="&#xE8E0;" />

                    <controls:ReactionButton
                        Grid.Column="2"
                        Command="{x:Bind ViewModel.ShareCommand}"
                        Description="Share"
                        IconGlyph="&#xE72D;" />

                    <controls:ReactionButton
                        Grid.Column="3"
                        Description="Download"
                        IconGlyph="&#xE896;" />

                    <controls:ReactionButton
                        Grid.Column="4"
                        Description="Save"
                        IconGlyph="&#xE823;" />
                </Grid>

                <Grid
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Button Background="Transparent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <controls:ChannelPicture ImageSource="{x:Bind ViewModel.ChannelPicture, Mode=OneWay, Converter={StaticResource UriToBitmapConverter}}" />

                            <Border
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Left"
                                CornerRadius="4">
                                <controls:Shimmer
                                    Width="100"
                                    Height="17"
                                    d:Visibility="Collapsed"
                                    Visibility="{x:Bind ViewModel.ChannelTitle, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                            </Border>
                            <TextBlock
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                d:Text="Channel Title"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.ChannelTitle, Mode=OneWay}" />
                        </Grid>
                    </Button>

                    <Button
                        Grid.Column="3"
                        Command="{x:Bind ViewModel.BackCommand}"
                        Content="Subscribe"
                        Foreground="{ThemeResource SystemAccentColor}"
                        Style="{StaticResource TransparentPathIconButtonStyle}" />
                </Grid>

                <Grid
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="Up next" />

                    <!--<ToggleSwitchL                  Grid.Column="1"
                        HorizontalAlignment="Right"
                        Header="Autoplay" />-->
                </Grid>
            </Grid>

            <!--<ScrollViewer
                Grid.Row="2"
                Margin="0,10,0,0"
                Padding="10"
                VerticalAlignment="Stretch"
                Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}">
                <StackPanel>
                    <TextBlock>
                        <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.ViewCount, Mode=OneWay, Converter={StaticResource NumberToAbbreviatedStringConverter}}" /> <Run Text="views" /> <Run Text="•" /> <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.UploadDate, Mode=OneWay, Converter={StaticResource ShortDateOffsetConverter}}" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,10,0,0"
                        Text="{x:Bind ViewModel.Description, Mode=OneWay}"
                        TextWrapping="WrapWholeWords" />
                </StackPanel>
            </ScrollViewer>-->
        </Grid>
    </Grid>
</Page>