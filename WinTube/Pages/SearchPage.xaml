<Page
    x:Class="WinTube.Pages.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:WinTube.Controls"
    xmlns:converters="using:WinTube.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinTube.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:observableModel="using:WinTube.Model.Observable"
    xmlns:templateselectors="using:WinTube.TemplateSelectors"
    xmlns:viewmodels="using:WinTube.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SearchViewModel}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter" />

        <templateselectors:SearchResultTemplateSelector
            x:Key="SearchResultTemplateSelector"
            CompactTemplate="{StaticResource CompactTemplate}"
            DefaultTemplate="{StaticResource DefaultTemplate}" />

        <DataTemplate x:Key="CompactTemplate" x:DataType="observableModel:ObservableVideoSearchResult">
            <Grid Padding="16,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Margin="16,0,0,0">
                    <Border CornerRadius="4">
                        <Image Source="{x:Bind Thumbnail, Mode=OneWay, TargetNullValue=/Assets/Template/Thumb_Default.png}" Stretch="Fill" />
                    </Border>
                    <controls:VideoDurationBadge Duration="{x:Bind Duration}" />
                </Grid>

                <Grid Grid.Column="1" Margin="12,0,16,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        FontWeight="SemiBold"
                        MaxLines="4"
                        Text="{x:Bind Title}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="1"
                        Margin="0,8,0,0"
                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                        Text="{x:Bind ChannelTitle}" />

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,8,0,8"
                        Orientation="Horizontal">
                        <controls:FontIcon
                            VerticalAlignment="Center"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Glyph="&#xE890;"
                            Size="12" />
                        <TextBlock
                            Margin="8,0,0,0"
                            d:Text="1.2M"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind VideoId}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="DefaultTemplate" x:DataType="observableModel:ObservableVideoSearchResult">
            <Grid Padding="0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid>
                    <Image Source="{x:Bind Thumbnail, Mode=OneWay, TargetNullValue=/Assets/Template/Thumb_Default.png}" Stretch="Fill" />
                    <controls:VideoDurationBadge Duration="{x:Bind Duration}" />
                </Grid>

                <Grid
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Padding="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <controls:ChannelPicture
                        VerticalAlignment="Top"
                        ImageSource="{x:Bind ChannelPicture, Mode=OneWay}"
                        Size="44" />

                    <Grid Grid.Column="1" Margin="12,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{x:Bind Title}"
                            TextWrapping="WrapWholeWords" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,4"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind ChannelTitle}" />
                    </Grid>

                    <Button
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        Style="{StaticResource TransparentPathIconButtonStyle}">
                        <controls:FontIcon Glyph="&#xE712;" />
                    </Button>
                </Grid>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ProgressRing
            Grid.RowSpan="2"
            Width="48"
            Height="48"
            IsActive="{x:Bind ViewModel.SearchResults.Count, Mode=OneWay, Converter={StaticResource EqualityToBooleanConverter}, ConverterParameter=0}"
            Visibility="{x:Bind ViewModel.IsOffline, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=true}" />

        <StackPanel
            Grid.RowSpan="2"
            Padding="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            d:Visibility="Visible"
            Visibility="{x:Bind ViewModel.IsOffline, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <controls:FontIcon Glyph="&#xF384;" Size="32" />
            <TextBlock
                Margin="0,10,0,0"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="It looks like you're currently offline."
                TextAlignment="Center" />
        </StackPanel>

        <ListView
            x:Name="searchResultsListView"
            Grid.Row="1"
            ItemTemplateSelector="{StaticResource SearchResultTemplateSelector}"
            ItemsSource="{x:Bind ViewModel.SearchResults, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectedVideo, Mode=TwoWay}"
            SelectionChanged="{x:Bind ViewModel.OnVideoSelected}"
            Visibility="{x:Bind ViewModel.IsOffline, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=true}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>